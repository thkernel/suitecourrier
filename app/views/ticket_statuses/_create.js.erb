$("ul.errors").html("");
<% if @ticket_status.errors.any? %>
  <% @ticket_status.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".ticket-statuses").html("<%= escape_javascript(render 'index') %>");
  $("#ticket-status-modal").modal("hide");
 
<% end %>