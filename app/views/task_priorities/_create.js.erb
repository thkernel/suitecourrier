$("ul.errors").html("");
<% if @task_priority.errors.any? %>
  <% @task_priority.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".task-priorities").html("<%= escape_javascript(render 'index') %>");
  $("#task-priority-modal").modal("hide");
 
<% end %>