    <fieldset>
        <legend><h2>Modification de profil</h2></legend>

        <%= form_with(model: profile, local: true) do |form| %>
         


            <div class="form-row">

              
                    <div class="form-group col-md-4">
                        <%= form.label :first_name, "Prénom" %>
                        <%= form.text_field :first_name, class: "form-control",  placeholder: "Prénom", required: true %>
                    </div>

                    <div class="form-group col-md-4">
                        <%= form.label :last_name, "Nom" %>
                        <%= form.text_field :last_name, class: "form-control",  placeholder: "Nom", require: true %>
                    </div>
                    <div class="form-group col-md-4">
                        <%= form.label :civility, "Genre" %>
                        <%= form.select :civility, GENDERS, {prompt: "Sélectionner"}, class: "form-control", required: true %>
                    </div>

                    
                    
                
            </div>

            <div class="form-row">

              
                    <div class="form-group col-md-6">
                        <%= form.label :address, "Adresse" %>
                        <%= form.text_field :address, class: "form-control",  placeholder: "Adresse" %>
                    </div>

                    <div class="form-group col-md-6">
                        <%= form.label :phone, "Téléphone" %>
                        <%= form.text_field :phone,  class: "form-control", placeholder: "Téléphone" %>  
                    </div>
                     

                    
                    
                
            </div>
            <div class="form-group">
                        <%= form.submit class: "btn btn-primary" %>
                    </div>
            <% end %>

    </fieldset>
