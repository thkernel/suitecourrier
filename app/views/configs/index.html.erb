<p id="notice"><%= notice %></p>

<h1>Smtp Configs</h1>

<table>
  <thead>
    <tr>
      <th>Host</th>
      <th>User name</th>
      <th>Password</th>
      <th>Domain</th>
      <th>Address</th>
      <th>Port</th>
      <th>Authentification</th>
      <th>Enable starttls auto</th>
      <th>Ssl</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @smtp_configs.each do |smtp_config| %>
      <tr>
        <td><%= smtp_config.host %></td>
        <td><%= smtp_config.user_name %></td>
        <td><%= smtp_config.password %></td>
        <td><%= smtp_config.domain %></td>
        <td><%= smtp_config.address %></td>
        <td><%= smtp_config.port %></td>
        <td><%= smtp_config.authentification %></td>
        <td><%= smtp_config.enable_starttls_auto %></td>
        <td><%= smtp_config.ssl %></td>
        <td><%= smtp_config.user %></td>
        <td><%= link_to 'Show', smtp_config %></td>
        <td><%= link_to 'Edit', edit_smtp_config_path(smtp_config) %></td>
        <td><%= link_to 'Destroy', smtp_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

