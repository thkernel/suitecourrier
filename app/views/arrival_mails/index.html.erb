<div class="br-pageheader mg-30">
  <nav class="breadcrumb pd-0 mg-0 tx-12">
    <span class="breadcrumb-item active"><h5>Courriers d'arrivée</h5></span>
  </nav>
</div><!-- br-pageheader -->
<div class="br-pagebody mg-b-30">
  <div class="br-section-wrapper">
    <div class="headers mg-b-20">
      <div class="left-content">
      </div>

      <div class="text-right">
          <%= link_to raw('<i class="fa fa-plus" aria-hidden="true"></i> Nouveau'), new_arrival_mail_path, class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", remote: false %>
      </div>
    </div>



    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Mes courriers</a>
        
        <a class="nav-item nav-link" id="nav-imputations-tab" data-toggle="tab" href="#nav-imputations" role="tab" aria-controls="nav-imputations" aria-selected="false">Mes imputations</a>

        <a class="nav-item nav-link" id="nav-tasks-tab" data-toggle="tab" href="#nav-tasks" role="tab" aria-controls="nav-tasks" aria-selected="false">Mes tâches</a>

      </div>
    </nav>
    <div class="tab-content  mg-t-30" id="nav-tabContent">

      <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
       
        <table id="datatable1" class="table display responsive nowrap">

          <thead>
            <tr>
              <th>Date</th>
              <th>Réf. interne</th>
              <th>Nature</th>
              <th>Support</th>
              <th>Date reception</th>
              <th>Correspondant</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody class="arrival-mails">
            <%= render "index", arrival_mails: @current_user_arrival_mails %>
          </tbody>
        </table>

      </div>

      <div class="tab-pane fade" id="nav-imputations" role="tabpanel" aria-labelledby="nav-imputations-tab">
        
        <table id="imputations-table" class="table display responsive nowrap">

          <thead>
            <tr>
            
              <th>ID</th>
              <th>Date</th>
              <th>Service</th>
              <th>Bénéficiaire</th>
              <th>Nbr. Tâches</th>
              <th>Vu</th>
              <th>Actions</th>
           
            </tr>
          </thead>

          <tbody class="imputations">
            <%= render "imputations/index", imputations: @imputations %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane fade" id="nav-tasks" role="tabpanel" aria-labelledby="nav-tasks-tab">
        
        <table id="tasks-table" class="table display responsive nowrap">

          <thead>
            <tr>
            
              <th>Date</th>
              <th>Titre</th>
              <th>Priorité</th>
              <th>Date d'échéance</th>
              <th>Progression</th>
           
            </tr>
          </thead>

          <tbody class="imputation-items">
            <%= render "arrival_mails/partials/tasks/index", tasks: @tasks %>
          </tbody>
        </table>
      </div>
     
    </div>



  </div>
</div>
<div id="arrival-mail-modal" class="c-modal modal fade" data-backdrop="static"></div>
<div id="imputation-item-modal" class="c-modal modal fade" data-backdrop="static"></div>

