<%= form_with(url: departure_mails_bulk_archive_path, local: true) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>

    <div class="form-group">
      <div class="alert alert-danger" role="alert">
                    
      <p>Cette action va archiver tout les courriers départ dont <br /> la date d'envoi est égale  à la date ce-dessous!</p>
      </div>
    </div>
    <div class="form-group">
      <%= form.label  "Date d'envoie" %>
      <%= form.date_field :departure_date, class: "form-control" %>
    </div>

  </div><!-- modal body -->
   <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit "Enregistrer",  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
