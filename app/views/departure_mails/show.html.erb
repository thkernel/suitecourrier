
  <div class="container page-wrapper mg-t-80 mg-b-30">
 
    <div class="row">
      <div class="col-md-9">
        <!-- -->
        <div class="card shadow-base bd-0">
          <div class="card-header bg-transparent pd-20">
            <h6 class="card-title tx-uppercase tx-12 mg-b-0">Informations courrier</h6>
          </div><!-- card-header -->
          <div class="card-body">
           
            <ul class="list-2-cols list-unstyled">
              <li class="detail-address">
                  <strong>Référence interne: </strong> 
                  <span><%= @departure_mail.internal_reference%></span>
                  
              </li>
              

              <li class="detail-address">
                <strong>Registre: </strong> 
                <span><%= @departure_mail.register.name %></span>
              </li>
              <li class="detail-city">
                <strong>Type de courrier: </strong> 
                <span><%= @departure_mail.mail_type.name %></span>
              </li>
              <li class="detail-city">
                <strong>Support: </strong> 
                <span><%= @departure_mail.support.name %></span>
              </li>
              <li class="detail-city">
                <strong>Lié à un courrier?: </strong> 
                <span><%= @departure_mail.linked_to_mail %></span>
              </li>
              <li class="detail-city">
                <strong>Réf. courrier lié: </strong> 
                <span><%= @departure_mail.reference_linked_mail %></span>
              </li>
              <li class="detail-city">
                <strong>Date départ: </strong> 
                <span><%= @departure_mail.departure_date %></span>
              </li>
              
              <li class="detail-city">
                <strong>A répondre? </strong> 
                <span><%= @departure_mail.to_answer %></span>
              </li>
              <li class="detail-city">
                <strong>Délai: </strong> 
                <span><%= @departure_mail.response_limit_time %></span>
              </li>
              <li class="detail-city">
                <strong>Date réponse: </strong> 
                <span><%= @departure_mail.response_date %></span>
              </li>
              <li class="detail-city">
                <strong>Destinataire: </strong> 
                <span><%= correspondent(@departure_mail.correspondent_id).correspondent_name %></span>
              </li>
              <li class="detail-city">
                <strong>Objet: </strong> 
                <span><%= @departure_mail.object %></span>
              </li>
              <li class="detail-city">
                <strong>Description: </strong> 
                <span><%= @departure_mail.description %></span>
              </li>
              <li class="detail-city">
                <strong>Dossier: </strong> 
                <span><%= @departure_mail.folder.name %></span>
              </li>
              <li class="detail-city">
                <strong>Statut: </strong> 
                <span><%= @departure_mail.status %></span>
              </li>
                
            </ul>
          </div>
        </div>
      </div>
     
        

       
      <div class="col-md-3">
         
        


       

         <div class="card shadow-base bd-0 mg-t-15">
          <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
            <h6 class="card-title tx-uppercase tx-12 mg-b-0">Pièces-jointes</h6>
            
          </div><!-- card-header -->
         
            
            <ul class="list-group">
              <% if @departure_mail.files.attached? %>
                <% @departure_mail.files.attachments.each do |file| %>
                  <li class="list-group-item rounded-top-0">
                    <p class="mg-b-0">
                      <i class="fa fa-file-text-o tx-info mg-r-8"></i>
                      <strong class="tx-inverse tx-medium">
                        <%= link_to file.blob.filename, rails_blob_path(file.blob, disposition: 'attachment') %>
                      </strong>
                    
                      
                    </p>
                  </li>
                <% end %>
              <% end %>
              <!-- add more here -->
            </ul>
          
        </div>
        
      </div>
    </div>
  </div>
</div>


