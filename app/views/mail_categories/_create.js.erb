$("ul.errors").html("");
<% if @mail_category.errors.any? %>
  <% @mail_category.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".mail-categories").html("<%= escape_javascript(render 'index') %>");
  $("#mail-category-modal").modal("hide");
 
<% end %>