<% @departure_mails.each do |departure_mail| %>
      <tr>
        <td><%= departure_mail.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= departure_mail.internal_reference %></td>
        <td><%= departure_mail.departure_date.strftime("%d/%m/%Y") %></td>
        <td><%= departure_mail.nature.name %></td>
        <td><%= departure_mail.support.name %></td>
        <td><%= correspondent_name(departure_mail.correspondent_id) %></td>
        <td><%= departure_mail.initiating_entity.name %></td>

       
        <td>

         <span class="action-buttons">
			<%= link_to raw('<i class="fa fa-pencil" aria-hidden="true"></i>
'),  edit_departure_mail_path(departure_mail), title: "Modifier", remote: false %>





<%= link_to raw('<i class="fa fa-eye" aria-hidden="true"></i>
'),  show_departure_mail_path(departure_mail.uid), title: "Voir", remote: false %>


<%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"></i>
'), departure_mail_delete_path(departure_mail), remote: true, title: "Supprimer", class: "delete" %>
</span>

        </td>
      </tr>
    <% end %>