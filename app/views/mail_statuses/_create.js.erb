$("ul.errors").html("");
<% if @mail_status.errors.any? %>
  <% @mail_status.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".mail-statuses").html("<%= escape_javascript(render 'index') %>");
  $("#mail-status-modal").modal("hide");
 
<% end %>