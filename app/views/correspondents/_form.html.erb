<%= form_with(model: correspondent, local: false) do |form| %>
   <div class="modal-body">
    <ul class="errors">
    </ul>

    <fieldset>
      <legend>Organisation</legend>
      <div class="row">
        <div class="col-md-5">
          <div class="form-group">
              <%= form.label :correspondent_type, "Type de correspondant" %>
              <%= form.collection_select(:correspondent_type_id, @correspondent_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%;", required: true) %> 
          </div>
        </div>

        <div class="col-md-7">
          <div class="form-group">
            <%= form.label :organization_name, "Nom de l'organisation" %>
            <%= form.text_field :organization_name, class: "form-control", placeholder: "Nom de l'organisation", required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :address, "Adresse" %>
            <%= form.text_field :address, class: "form-control", placeholder: "Adresse" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email, class: "form-control", placeholder: "E-mail" %>
          </div>
        </div>

      </div>

      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :phone, "Téléphone" %>
            <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone", id: :correspondent_phone %>
          </div>
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :city, "Ville", class: "required" %>
            <%= form.text_field :city, class: "form-control", placeholder: "Ville", required: true %>

          </div>
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :country, "Pays", class: "required" %>
            <%= form.text_field :country, class: "form-control", placeholder: "Pays", required: true %>
          </div>
        </div>

        <div class="col-md-3">
          <div class="form-group">
            <%= form.label :zip_code, "Code postal" %>
            <%= form.text_field :zip_code, class: "form-control", placeholder: "Code postal" %>
          </div>
        </div>

      </div>


      

        

        
    </fieldset>

    <fieldset>
      <legend>Personnne ressource</legend>
      <div class="row">

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :contact_first_name, "Prénom" %>
            <%= form.text_field :contact_first_name, class: "form-control", placeholder: "Prénom" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :contact_last_name, "Nom" %>
            <%= form.text_field :contact_last_name, class: "form-control", placeholder: "Nom" %>
          </div>
        </div>
      </div>

      <div class="row">

        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :contact_phone, "Téléphone" %>
            <%= form.text_field :contact_phone, class: "form-control", placeholder: "Téléphone" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :contact_email, "Email" %>
            <%= form.text_field :contact_email, class: "form-control", placeholder: "Email" %>
          </div>
        </div>
      </div>

      </fieldset>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
