
<div class="dropdown">
<a href="" class="nav-link pd-x-7 pos-relative" data-toggle="dropdown" aria-expanded="false">
    <i class="fa fa-bell-o tx-24"></i>
    <!-- start: if statement -->
    <span class="notification-number  bg-danger pos-absolute  rounded-circle">
        <%= user_notifications.count %>
            
        </span>
    <!-- end: if statement -->
</a>
<div class="dropdown-menu dropdown-menu-header" x-placement="top-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-83px, 1px, 0px);">
    <div class="dropdown-menu-label">
    <label>Notifications</label>
    <!-- <a href="">Mark All as Read</a> -->
    </div><!-- d-flex -->

    <div class="media-list">
        
        <!-- loop starts here -->
        <% user_notifications.each do |notification| %>

            <%= link_to notification_path(notification), class: "media-list-link read" do %>
                <div class="media <%= "unreaded-notification" if unreaded_notification?(notification) %>">
                    <i class="fa fa-info-circle tx-40" aria-hidden="true"></i>


                    <div class="media-body">
                        <p class="noti-text">
                            <strong><%= notification.notificable_type %>:</strong> 
                            <%= notification.content %>
                        </p>
                        <span><%= l(notification.created_at, format: :long, locale: :"fr")%></span>
                    </div>
                </div><!-- media -->
            <% end %>
        <% end %>
        <div class="dropdown-footer">
            
            <%= link_to raw('<i class="fa fa-angle-down mg-r-5"></i>Tout afficher'), notifications_path %>
        </div>
    </div><!-- media-list -->
</div><!-- dropdown-menu -->
</div><!-- dropdown -->
  