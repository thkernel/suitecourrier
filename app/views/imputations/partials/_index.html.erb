 <% @imputation.imputation_items.each do |item| %>
                  <tr>
                    <td class="tx-12">
                      <%= item.created_at.strftime("%d/%m/%Y") %>
                    </td>
                    <td>
                      <%= item.task_type.name %>
                    </td>
                    <td>
                      <%= item.description %>
                    </td>
                    <td class="tx-12">
                      <%= item.due_date.strftime("%d/%m/%Y") if item.due_date.present? %>
                    </td>
                     <td class="tx-12">
                      <%= item.start_date.strftime("%d/%m/%Y") if item.start_date.present? %>
                    </td>
                     <td class="tx-12">
                      <%= item.completed_date.strftime("%d/%m/%Y") if item.completed_date.present? %>
                    </td>
                     <td class="tx-12">
                      <%= item.task_priority.name %>
                    </td>
                    <td class="tx-12">
                      <%= item.task_status.name %>
                    </td>
                    <td>
                        <%= link_to raw('<span class="fa-stack fa-lg">
                        <i class="fa fa-circle fa-stack-2x"></i>
                        <i class="fa fa-eye fa-stack-1x fa-inverse" aria-hidden="true"></i>
                        </span>
'),  imputation_item_path(item), title: "Voir", remote: false %>



                    </td>
                   
                  </tr>
                  <% end %>