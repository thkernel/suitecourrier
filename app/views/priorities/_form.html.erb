<%= form_with(model: priority, local: false) do |form| %>
  <div class="modal-body">
    <ul class="errors">
    </ul>


  
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= form.label :name, "Nom", class: "required" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :color, "Couleur" %>
          <%= form.color_field :color, class: "form-control", placeholder: "Couleur" %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :processing_time_in_days, "DÃ©lai (jours)" %>
          <%= form.number_field :processing_time_in_days, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
    </div>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
