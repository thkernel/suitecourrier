$("ul.errors").html("");
<% if @register.errors.any? %>
  <% @register.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".registers").html("<%= escape_javascript(render 'index') %>");
  $("#register-modal").modal("hide");
 
<% end %>