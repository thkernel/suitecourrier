<p id="notice"><%= notice %></p>

<h1>Organization Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organization_types.each do |organization_type| %>
      <tr>
        <td><%= organization_type.name %></td>
        <td><%= organization_type.status %></td>
        <td><%= organization_type.user %></td>
        <td><%= link_to 'Show', organization_type %></td>
        <td><%= link_to 'Edit', edit_organization_type_path(organization_type) %></td>
        <td><%= link_to 'Destroy', organization_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

