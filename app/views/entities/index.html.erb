<p id="notice"><%= notice %></p>

<h1>Entities</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Parent entity</th>
      <th>Entity type</th>
      <th>Name</th>
      <th>Short name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Address</th>
      <th>Description</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.uid %></td>
        <td><%= entity.parent_entity %></td>
        <td><%= entity.entity_type %></td>
        <td><%= entity.name %></td>
        <td><%= entity.short_name %></td>
        <td><%= entity.phone %></td>
        <td><%= entity.email %></td>
        <td><%= entity.address %></td>
        <td><%= entity.description %></td>
        <td><%= entity.status %></td>
        <td><%= entity.user %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

