<%= form_with(model: entity, local: false) do |form| %>
  

  <div class="modal-body">
    <ul class="errors">
    </ul>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group customSelect">
          <%= form.label :entity_type_id, "Typé d'entité", class: "required" %>
          <%= form.collection_select(:entity_type_id, @entity_types, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%", required: true) %> 
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= form.label :name, "Nom", class: "required" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Nom", required: true %>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">

        <div class="form-group customSelect">
          <%= form.label :parent_entity_id, "Rattachée à" %>
          <%= form.collection_select(:parent_entity_id, @entities, :id, :name, {prompt: "Sélectionner"}, class: "form-control", style: "width: 100%") %> 
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :phone, "Téléphone" %>
          <%= form.text_field :phone, class: "form-control", placeholder: "Téléphone" %>
        </div>
      </div>
      <div class="col-md-6">

        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control", placeholder: "Description" %>
        </div>
      </div>
    </div>

  

  </div><!-- modal body -->
  <div class="modal-footer">
    <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
    <%= form.submit  class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
  </div>
<% end %>
