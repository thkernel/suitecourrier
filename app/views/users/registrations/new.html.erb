<div class="signin-page">
    <div class="signin--page__header">
			<div class="signin-logo tx-center tx-28 tx-bold tx-inverse">
				<%= render 'components/logo/logo' %>
			</div>
		<div class="tx-center mg-b-20">Inscrivez-vous gratuitement!</div>
	</div>
	
	<div class="sigin-page__body">
   

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder: "E-mail" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control",  placeholder: "Mot de passe" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",  placeholder: "Confirmation du mot de passe" %>
  </div>

  <div class="form-group">
    <label>
      <input type="checkbox"> J'accepte les <a href="#">conditions d'utilisation du service.</a>
    </label>
  </div>
       

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn btn-primary btn-block" %>
  </div>
<% end %>
  </div>
              
	<div class="o-line">
        <div class="mg-t-10 tx-center">
			Déjà un compte? <%= link_to "Se connecter", new_user_session_path(), class: "tx-info" %>
		</div>

	</div>
   

</div>