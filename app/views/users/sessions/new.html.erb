<div class="signin-page">
    <div class="signin--page__header">
			<div class="signin-logo tx-center tx-28 tx-bold tx-inverse">
				<%= render 'components/logo/logo' %>
			</div>
		<div class="tx-center mg-b-20">Veuillez vous connecter!</div>
	</div>
	<div class="sigin-page__body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",  placeholder: "Email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control",  placeholder: "Mot de passe" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Se connecter", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
</div>
           
