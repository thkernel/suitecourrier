 <div class="col-lg-6">
  <!-- Due tasks -->
    <div class="card shadow-base bd-0">
              <div class="card-header pd-20 bg-transparent">
                <h6 class="card-title tx-uppercase tx-12 mg-b-0">Tâches en retard</h6>
              </div><!-- card-header -->
              <table class="table table-responsive mg-b-0 tx-12">
                <thead>
                  <tr class="tx-10">
                   
                    <th class="pd-y-5">Date</th>
                    <th class="pd-y-5">Titre</th>
                    <th class="pd-y-5">Priorité</th>
                    <th class="pd-y-5">Date d'échéance</th>
                    <th class="pd-y-5">Progression</th>
                   
                  </tr>
                </thead>
                <tbody>
                  <%if  @overdue_tasks.present? %>
                    <% @overdue_tasks.take(5).each do |imputation_item| %>
                        <tr>
                        
                          <td class="valign-middle"><%= imputation_item.created_at.strftime("%d/%m/%Y") %></td>
                          <td class="valign-middle"><%= imputation_item.title %></td>
                          <td class="valign-middle"><%= imputation_item.priority %></td>
                          <td class="valign-middle"><%= imputation_item.due_date.strftime("%d/%m/%Y") %></td>
                          <td class="valign-middle"><%= imputation_item.task_status.name %></td>

                        </tr>
                      <% end %>
                    <% end %>
                 
                </tbody>
              </table>
              
              <div class="card-footer tx-12 pd-y-15 bg-transparent">
                <a href=""><i class="fa fa-angle-down mg-r-5"></i>Voir tout</a>
              </div><!-- card-footer -->
            </div>




            <!-- Due request -->
            <div class="card shadow-base bd-0 mg-t-20">
              <div class="card-header pd-20 bg-transparent">
                <h6 class="card-title tx-uppercase tx-12 mg-b-0">Tickets en retard</h6>
              </div><!-- card-header -->
              <table class="table table-responsive mg-b-0 tx-12">
                <thead>
                  <tr class="tx-10">
                    <th class="pd-y-5">Date</th>
                    <th class="pd-y-5">Titre</th>
                    <th class="pd-y-5">Date d'écheance</th>
                    <th class="pd-y-5">Priorité</th>
                     <th class="pd-y-5">Progression</th>
                   
                  </tr>
                </thead>
                <tbody>
                  <% if @overdue_tickets.present? %>
                    <% @overdue_tikets.take(5).each do |tiket| %>
                      <tr>
                      
                        <td class="valign-middle"><%= ticket.created_at.strftime("%d/%m/%Y") %></td>
                        <td class="valign-middle"><%= ticket.title%></td>
                        <td class="valign-middle"><%= ticket.due_date.strftime("%d/%m/%Y") %></td>
                        <td class="valign-middle"><%= ticket.ticket_priority.name  %></td>
                        <td class="valign-middle"><%= ticket.ticket_status.name %></td>
                        
                      </tr>
                    <% end %>
                  <% end %>
                  
                </tbody>
              </table>
               
              <div class="card-footer tx-12 pd-y-15 bg-transparent">
                <%= link_to raw('<i class="fa fa-angle-down mg-r-5"></i>Voir tout'), tickets_path %>
              </div><!-- card-footer -->
            </div>



            <!-- Due arrival mail -->
            <div class="card shadow-base bd-0 mg-t-20">
              <div class="card-header pd-20 bg-transparent">
                <h6 class="card-title tx-uppercase tx-12 mg-b-0">Courrier d'arrivée en retard</h6>
              </div><!-- card-header -->
              <table class="table table-responsive mg-b-0 tx-12">
                <thead>
                  <tr class="tx-10">
                  
                    <th class="pd-y-5">Date Enreg.</th>
                    <th class="pd-y-5">Date arrivée</th>
                    <th class="pd-y-5">Date départ</th>
                    <th class="pd-y-5">Date d'écheance</th>
                    <th class="pd-y-5">Réf</th>
                   
                  </tr>
                </thead>
                <tbody>
                  <% @overdue_arrival_mails.take(5).each do |arrival_mail| %>
                    <tr>
                    
                      <td class="valign-middle"><%= arrival_mail.created_at.strftime("%d/%m/%Y") %></td>
                      <td class="valign-middle"><%= arrival_mail.receipt_date.strftime("%d/%m/%Y") %></td>
                      <td class="valign-middle"><%= arrival_mail.departure_date.strftime("%d/%m/%Y") %></td>
                      <td class="valign-middle"><%= arrival_mail.response_limit_time.strftime("%d/%m/%Y") if arrival_mail.response_limit_time %></td>

                      <td class="valign-middle"><%= arrival_mail.internal_reference %></td>
                      

                    </tr>
                  <% end %>
                  
                </tbody>
              </table>
              
              <div class="card-footer tx-12 pd-y-15 bg-transparent">
                <%= link_to raw('<i class="fa fa-angle-down mg-r-5"></i>Voir tout'), arrival_mails_path %>
              </div><!-- card-footer -->
            </div>
